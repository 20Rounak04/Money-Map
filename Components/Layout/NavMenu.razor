        padding: 20px;
    }

    .nav-header {
        margin-bottom: 20px;
        text-align: center;
    }

        .nav-header h2 {
            margin: 0;
            font-size: 20px;
            font-weight: bold;
        }

        .nav-header p {
            margin: 5px 0 15px;
            font-size: 14px;
            opacity: 0.8;
        }

    .nav-links {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

        .nav-links li {
            margin-bottom: 15px;
        }

        .nav-links a {
            text-decoration: none;
            color: white;
            font-size: 16px;
            transition: color 0.3s;
        }

            .nav-links a:hover {
                color: #d3e8ff;
            }

    .logout-button {
        margin-top: auto;
        background-color: #e74c3c;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        text-align: center;
    }

        .logout-button:hover {
            background-color: #c0392b;
