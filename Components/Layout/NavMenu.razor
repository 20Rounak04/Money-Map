<NavLink class="nav-menu">
    <div class="nav-header">
        <h2>Welcome, @Username</h2>
        <p>Role: @UserRole</p>

    </div>

    <ul class="nav-links">
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/inflow">Inflow</a></li>
        <li><a href="/outflow">Outflow</a></li>
        <li><a href="/debt">Debt</a></li>
    </ul>

    <button class="logout-button" @onclick="LogoutHandler">
        Logout
    </button>
</NavLink>

@code {
    [Parameter]
    public string Username { get; set; } = "User";

    [Parameter]
    public string UserRole { get; set; } = "Role";

    [Parameter]
    public EventCallback LogoutHandler { get; set; }
}
<style>
    .nav-menu {
        background-color: #4a90e2;
