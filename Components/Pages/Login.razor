@page "/login"
@inject NavigationManager Nav
@using MoneyMap.Services.Interface
@inject IUserService UserService

<div class="form-login">
    <form class="text-center" @onsubmit="HandleLogin">
        <img class="mb-4" src="/appicon.png" alt="" height="72">
        <h1 class="h3 mb-3 fw-normal">Please Login</h1>

        <div class="form-floating mb-3">
            <input type="text" class="form-control" @bind="Users.Username" placeholder="Username" />
            <label for="floatingInput">Username</label>
        </div>

        <!-- Password Input -->
        <div class="form-floating mb-3">
            <input type="password" class="form-control" @bind="Users.Password" placeholder="Password" />
            <label for="floatingPassword">Password</label>
        </div>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger">@ErrorMessage</div>
        }
        <button class="btn btn-lg btn-primary">
            Login
        </button>
    </form>
</div>

<style>
    .form-login {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #d0e6ff; /* Light blue background */
    }

    form {
        background-color: #a3c9ff; /* Blue background for the form container */
        padding: 20px;
        border-radius: 15px; /* Rounded corners */
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        width: 350px;
    }

    img {
        margin-bottom: 10px;
    }

    h1 {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 20px;
        color: black;
    }

    .form-floating {
        position: relative;
        margin-bottom: 20px;
    }

    input {
        background-color: #dcdcdc; /* Light gray input background */
        border: none;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
        font-size: 1rem;
    }

    label {
        position: absolute;
        top: 50%;
        left: 10px;
        transform: translateY(-50%);
        color: black;
        font-size: 0.9rem;
        pointer-events: none;
    }

    button {
        width: 100%;
        margin-bottom: 10px;
        padding: 10px;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff; /* Blue button */
        color: white;
    }

   
    }

    .alert {
        margin-top: 10px;
        padding: 10px;
        background-color: #ffdddd; /* Light red background for error message */
        color: red;
        border-radius: 5px;
    }
</style>